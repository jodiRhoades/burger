<div class="container-fluid ">
  <div class="row ">
    <div class="col-sm">
      <header class="d-flex align-items-center flex-column">

        <img id="burgerpic" src="/assets/css/image/burgerpic.png">
        <h1>Eat-Da-Burger!</h1>
      </header>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{burger_name}} </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>